= form_for(@main) do |f|
  - if @main.errors.any?
    #error_explanation
      %h2
        = pluralize(@main.errors.count, "error")
        prohibited this main from being saved:
      %ul
        - @main.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_field :content
  .actions
    = f.submit
